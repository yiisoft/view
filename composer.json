{
    "name": "yiisoft/view",
    "type": "library",
    "description": "Yii View Rendering Library",
    "keywords": [
        "yii",
        "view"
    ],
    "homepage": "http://www.yiiframework.com/",
    "license": "BSD-3-Clause",
    "support": {
        "source": "https://github.com/yiisoft/view",
        "issues": "https://github.com/yiisoft/view/issues",
        "forum": "http://www.yiiframework.com/forum/",
        "wiki": "http://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii"
    },
    "minimum-stability": "dev",
    "require": {
        "php": "^7.4|^8.0",
        "psr/event-dispatcher": "1.0.0",
        "psr/event-dispatcher-implementation": "1.0.0",
        "psr/log": "^1.1",
        "yiisoft/arrays": "^3.0@dev",
        "yiisoft/files": "^3.0@dev",
        "yiisoft/html": "^3.0@dev",
        "yiisoft/i18n": "^1.0",
        "yiisoft/json": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "roave/infection-static-analysis-plugin": "^1.6",
        "spatie/phpunit-watcher": "^1.23",
        "vimeo/psalm": "^4.3",
        "yiisoft/aliases": "^1.1",
        "yiisoft/di": "^3.0@dev",
        "yiisoft/event-dispatcher": "^3.0@dev"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        },
        "config-plugin": {
            "params": "config/params.php",
            "common": "config/common.php",
            "web": "config/web.php"
        }
    },
    "autoload": {
        "psr-4": {
            "Yiisoft\\View\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\View\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit --testdox --no-interaction",
        "test-watch": "phpunit-watcher watch"
    }
}
